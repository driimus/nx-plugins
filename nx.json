{
  "defaultBase": "main",
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "e2e": {
      "dependsOn": ["^build"]
    },
    "@nx/jest:jest": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.*"]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/tsconfig.base.json", "{workspaceRoot}/nx.json"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s"
    ]
  },
  "nxCloudAccessToken": "ODljYzhlMjYtMmIzYS00OWUwLWE3NTItZWNlNDE0MTc5ZDlkfHJlYWQ=",
  "release": {
    "projects": ["packages/*", "!packages/*-e2e"],
    "version": {
      "conventionalCommits": true,
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "changelog": {
      "workspaceChangelog": {
        "file": false
      },
      "projectChangelogs": {
        "file": false,
        "createRelease": "github"
      }
    }
  }
}
